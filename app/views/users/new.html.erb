<h1 align="center">Cadastre-se</h1>

<% if @user.errors.any? %>
    <h2>Usuário não pode ser criado</h2>
    <% @user.errors.full_messages.each do |msg| %>
        <ul>
            <li> <%= msg %> </li>
        </ul>
    <% end %>
<% end %>

<%= form_for @user do |f| %>

<div class"row">
    <div class="container">
        <p>
            <%= f.label :name %><br/>
            <%= f.text_field :name %>
        </p>
        <p>
            <%= f.label :cpf %><br/>
            <%= f.text_field :cpf %>
        </p>
        <p>
            <%= f.label :email %><br/>
            <%= f.text_field :email %>
        </p>
        <p>
            <%= f.label :password %><br/>
            <%= f.password_field :password %>
        </p>
        <p>
            <%= f.submit "Cadastrar", class: 'waves-effect waves-light btn' %>
        </p>

    </div>
</div>
    

<% end %>